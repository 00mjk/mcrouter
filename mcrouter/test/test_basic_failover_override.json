{
  "clusters": {
    "A": {
      "pools": {
        "A.wildcard": {
          "servers": [ "localhost:12345" ]
        }
      }
    },
    "B": {
      "pools": {
        "B.wildcard": {
          "servers": [ "localhost:12346" ]
        }
      }
    }
  },
  "routes" : [
    {
      "aliases" : [ "/a/a/" ],
      "route" : {
        "type" : "FailoverWithExptimeRoute",
        "failover" : "PoolRoute|B.wildcard",
        "normal" : "PoolRoute|A.wildcard",
        "settings": {
          "updates": false
        }
      }
    }
  ]
}